<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="25dp"
        android:orientation="vertical"
        tools:context=".ui.schedule_meeting.ScheduleMeetingActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/meeting_room_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_field_margin_top"/>

            <TextView
                android:id="@+id/meeting_room_error_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veillez selectionez une salle"
                app:drawableRightCompat="@drawable/ic_error_24"
                android:drawablePadding="10dp"
                android:visibility="invisible"
                android:textColor="@color/red"/>

        </LinearLayout>

        <EditText
            android:id="@+id/date_picker_action"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_field_margin_top"
            android:hint="Date de la réunion"/>

        <EditText
            android:id="@+id/time_picker_action"
            android:focusable="false"
            android:ems="10"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_field_margin_top"
            android:hint="L'heure de début"/>


        <EditText
            android:id="@+id/duration_picker_action"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_field_margin_top"
            android:hint="Durée"/>

        <EditText
            android:id="@+id/meeting_subject_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_field_margin_top"
            android:hint="Sujet de la réunion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/form_field_margin_top">

            <EditText
                android:id="@+id/color_picker_action"
                android:focusable="false"
                android:cursorVisible="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="7"
                android:hint="Choisissez une couleur"/>

            <View
                android:id="@+id/meeting_color_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rounded_corners" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_field_margin_top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/participant_email_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Participant"/>

            <Button
                android:id="@+id/add_participant_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="?attr/colorPrimary"
                android:text="Ajouter"/>

        </LinearLayout>

        <TextView
            android:id="@+id/added_participant_emails_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Emails des participants:  "
            android:maxLines="4"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Planifier"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
